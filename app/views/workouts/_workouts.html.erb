<div class= "row">
  <h3> Current Workouts </h3><br>
    <div class= "col-md-8">
      <table class= "table table-bordered table-hover">
        <tbody>
        <thead id='workout-th'>
          <th> Date </th>
          <th> Title </th>
          <th> Muscle Group(s) </th>
          <th> Options </th>
        </thead>
          <% if current_user %>
          <% workouts.each do |workout| %>
            <tr>
             <td><%= workout.day %></td>
             <td><%= link_to workout.title, [@user, workout] %></td>
             <td><%= workout.muscle_group %></td>
             <td>
              <%= link_to "Edit", edit_user_workout_path(@user, workout) ,class: 'btn btn-success'%>
              <%= link_to "Delete", user_workout_path(@user, workout), method: :delete, data: {confirm: "Are you sure you want to delete this workout? "}, class: 'btn btn-danger' %>
             </td>
            </tr>
          <% end %>
          <% end %>
      </tbody>
      </table>
      <%= link_to "Add Workout!", new_user_workout_path(current_user), class: 'btn btn-success' %>
    </div>
</div>