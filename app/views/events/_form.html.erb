  <div class="row" id= 'event-form'>
   <div class="col-md-4">
     <p>Guidelines for Events:</p>
     <ul>
       <li>place guidelines.</li>
       <li>dont forget to update this.</li>
       <li>Chris im talking to you.</li>
     </ul>
   </div>
   <div class="col-md-8" >
      <% if current_user %>
       <%= form_for [current_user, @event] do |f| %>
         <div class="form-group">
           <%= f.label :title %>
           <%= f.text_field :title, class: 'form-control', placeholder: "Enter title of event:" %>
         </div>
         <div class="form-group">
           <%= f.label :start %>
           <%= f.date_select :start, class: 'form-control', placeholder: "Enter Start Date:" %>
         </div>
         <div class="form-group">
           <%= f.label :end %>
           <%= f.date_select :end, class: 'form-control', placeholder: "Enter End Date:" %>
         </div>
         <div class= "form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       <% end %>  
      </div>
      <% end %>
   </div>
 </div>