  <div class="row">
   <div class="col-md-4">
     <p>Guidelines for Photos:</p>
     <ul>
       <li>place guidelines.</li>
       <li>dont forget to update this.</li>
       <li>Chris im talking to you.</li>
     </ul>
   </div>
   <div class="col-md-8">
      <% if current_user %>
       <%= form_for [current_user, @photo] do |f| %>
         <div class="form-group">
           <%= f.label :title %>
           <%= f.text_field :title, class: 'form-control', placeholder: "Enter Photo Title" %>
         </div>
         <div class="form-group">
          <%= f.label :photo_img %>
          <%= f.file_field :photo_img %>
          <%= f.hidden_field :photo_img_cache %>
         </div>
         <div class="form-group">
           <%= f.label :message %>
           <%= f.text_area :message, rows: 5, class: 'form-control', placeholder: "Enter message here:" %>
         </div>
         <div class="form-group">
           <%= f.label :day %>
           <%= f.date_select :day, class: 'form-control', placeholder: "Enter Date." %>
         </div>
         <div class= "form-group" id= "ph-sbmt">
         <%= f.submit "Save", class: 'btn btn-success' %>
       <% end %>  
      </div>
      <% end %>
   </div>
 </div>