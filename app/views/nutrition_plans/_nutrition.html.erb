<div class= "row">
  <h3 id= 'nutri-title'> Current Nutrition Plans </h3><br>
    <div class= "col-md-10 col-md-offset-1">
      <table class= "table table-bordered table-hover">
        <tbody>
        <thead id= 'nutri-th'>
          <th> Date </th>
          <th> Title </th>
          <th> Options </th>
        </thead>
          <% if current_user %>
          <% nutrition_plans.each do |nutrition_plan| %>
            <tr>
             <td><%= nutrition_plan.day %></td>
             <td><%= link_to nutrition_plan.title, [@user, nutrition_plan] %></td>
             <td >
              <%= link_to "Edit", edit_user_nutrition_plan_path(@user, nutrition_plan) ,class: 'btn btn-success'%>
              <%= link_to "Delete", user_nutrition_plan_path(@user, nutrition_plan), method: :delete, data: {confirm: "Are you sure you want to delete this nutrition plan? "}, class: 'btn btn-danger' %>
             </td>
            </tr>
          <% end %>
          <% end %>
      </tbody>
      </table>
      <p id= 'nutri-title'><%= link_to "Add Nutrition Plan!", new_user_nutrition_plan_path(current_user), class: 'btn btn-success' %>
      </p>
    </div>
</div>