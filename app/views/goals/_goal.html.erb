 
<div class= 'row' id= 'goal-<%= goal.id %>'>
  <div class= "col-md-4 col-md-offset-3">
    <div class= 'well'>
     <p><%= goal.goal %></p><hr>
     <small>
       <%= goal.user.name %> added <%= time_ago_in_words(goal.created_at) %> ago
         | <%= link_to "Delete", [ goal.goal_list, goal], method: :delete, remote: true %>
     </small>
    </div>
  </div>
  <div class= 'col-md-2 col-md-offset-1' id = 'goal-button'>
    <% if goal.complete %>
      COMPLETED
    <% else %>
      <a href="/goal_lists/<%= goal.goal_list.id %>/goals/<%= goal.id %>/?complete=true" class='btn btn-warning' id= 'complete' data-remote="true" data-method="PATCH">Complete</a>
    <% end %>
  </div>
</div>
