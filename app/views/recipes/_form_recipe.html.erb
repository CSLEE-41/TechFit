  <div class="row">
   <div class="col-md-4">
     <p>Guidelines for Recipes:</p>
     <ul>
       <li>place guidelines.</li>
       <li>dont forget to update this.</li>
       <li>Chris im talking to you.</li>
     </ul>
   </div>
   <div class="col-md-8">
      <% if current_user %>
       <%= form_for [current_user, @recipe] do |f| %>
         <div class="form-group">
           <%= f.label :title %>
           <%= f.text_field :title, class: 'form-control', placeholder: "Enter Recipe Title" %>
         </div>
         <div class="form-group">
          <%= f.label :food_pic %>
          <%= f.file_field :food_pic %>
          <%= f.hidden_field :food_pic_cache %>
         </div>
         <div class="form-group">
           <%= f.label :category %>
           <%= f.text_field :category, class: 'form-control', placeholder: "Ex: Breakfast, Lunch, Dinner, Snack, Cheat Meal" %>
         </div>
         <div class="form-group">
           <%= f.label :ingredients %>
           <%= f.text_area :ingredients, rows: 20, class: 'form-control', placeholder: "Enter ingredients here:" %>
         </div>
         <div class="form-group">
           <%= f.label :instructions %>
           <%= f.text_area :instructions, rows: 20, class: 'form-control', placeholder: "List the instructions for cooking & prepping here." %>
         </div>
         <div class= "form-group" id= "rec-sbmt">
         <%= f.submit "Save", class: 'btn btn-success' %>
       <% end %>  
      </div>
      <% end %>
   </div>
 </div>