<br>
<h3><em><%= @user.name %>'s</em></h3>
<h4> Goal Lists: </h4>
<div class = 'row'>
  <div class= 'col-md-8'>
    <table class = 'table table-hover table-bordered table-striped'>
      <tbody>
        <thead>
          <th>Title:</th>
          <th>Start Date:</th>
          <th>End Date:</th>
          <th>Options:</th>
        </thead>
        <% if current_user %>
        <% @goal_lists.each do |goal_list| %>
        <tr>
          <td><%= link_to goal_list.title, [@user, goal_list] %></td>
          <td><%= goal_list.start_date %></td>
          <td><%= goal_list.end_date %></td>
          <td>
            <%= link_to "Edit", edit_user_goal_list_path(@user, goal_list), class: 'btn btn-success'%>
            <%= link_to "Delete", user_goal_list_path(@user, goal_list), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
      </tbody>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
<%= link_to "+ New Goal List", new_user_goal_list_path, class: 'btn btn-success' %>
